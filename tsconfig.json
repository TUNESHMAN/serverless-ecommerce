{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["./stateless/src/adapters/*"],
      "@config/*": ["./stateless/src/config/*"],
      "@config": ["./stateless/src/config/index"],
      "@errors": ["./stateless/src/errors/index"],
      "@schemas/*": ["./stateless/src/schemas/*"],
      "@shared": ["./stateless/src/shared/index"],
      "@dto/*": ["stateless/src/dto/*"],
      "@use-cases/*": ["./stateless/src/use-cases/*"],
      "@packages/*": ["./packages/*"],
      "@events/*": ["stateless/src/events/*"]
    }
  },
  "exclude": ["node_modules", "cdk.out"]
}
